         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label layoutX="15.0" layoutY="165.0" text="Maximum Weight">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label layoutX="16.0" layoutY="224.0" text="No of passengers">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <TextField fx:id="addVehicleNumContext" layoutX="229.0" layoutY="104.0" onAction="#moveMaxWeight" prefHeight="24.0" prefWidth="166.0" style="-fx-background-color: #bfbfbf;" />
